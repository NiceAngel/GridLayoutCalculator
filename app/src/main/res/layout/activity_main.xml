<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="8"
    tools:context="com.example.duatp.gridlayoutcalculator.MainActivity">
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="500dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/Hint1"
            android:id="@+id/Text1"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="5"
            android:layout_gravity="fill_horizontal"/>
            />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Text2"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnSpan="5"
            android:layout_gravity="fill_horizontal"
            android:hint="@string/Hint2"
            />


        <Button
            android:id="@+id/BtnNum0"
            android:text="0"
            android:layout_width="75dp"
            android:layout_row="2"
            android:layout_column="0"/>
        <Button
            android:id="@+id/BtnNum1"
            android:text="1"
            android:layout_width="75dp"
            android:layout_row="2"
            android:layout_column="1"/>

        <Button
            android:id="@+id/BtnNum2"
            android:text="2"
            android:layout_width="75dp"
            android:layout_row="2"
            android:layout_column="2"/>

        <Button
            android:id="@+id/BtnNum3"
            android:text="3"
            android:layout_width="75dp"
            android:layout_row="2"
            android:layout_column="3"/>
        <Button
            android:id="@+id/BtnNum4"
            android:text="4"
            android:layout_width="75dp"
            android:layout_row="2"
            android:layout_column="4"/>

        <Button
            android:id="@+id/BtnNum5"
            android:text="5"
            android:layout_width="75dp"
            android:layout_row="3"
            android:layout_column="0"/>
        <Button
            android:id="@+id/BtnNum6"
            android:text="6"
            android:layout_width="75dp"
            android:layout_row="3"
            android:layout_column="1"/>
        <Button
            android:id="@+id/BtnNum7"
            android:text="7"
            android:layout_width="75dp"
            android:layout_row="3"
            android:layout_column="2"/>
        <Button
            android:id="@+id/BtnNum8"
            android:text="8"
            android:layout_width="75dp"
            android:layout_row="3"
            android:layout_column="3"/>
        <Button
            android:id="@+id/BtnNum9"
            android:text="9"
            android:layout_width="75dp"
            android:layout_row="3"
            android:layout_column="4"/>

        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Add"
        android:id="@+id/Addbutton"
        android:onClick="onAddClicked"
        android:layout_row="4"
        android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_gravity="fill_horizontal"/>
   <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Sub"
        android:id="@+id/SubButton2"
        android:onClick="onSubClicked"
       android:layout_row="5"
       android:layout_column="0"
       android:layout_columnSpan="5"
       android:layout_gravity="fill_horizontal"/>
   <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Mul"
        android:id="@+id/MulButton3"
        android:onClick="onMulClicked"
       android:layout_row="6"
       android:layout_column="0"
       android:layout_columnSpan="5"
       android:layout_gravity="fill_horizontal"/>
   <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Div"
        android:id="@+id/DivButton4"
        android:onClick="onDivClicked"
       android:layout_row="7"
       android:layout_column="0"
       android:layout_columnSpan="5"
       android:layout_gravity="fill_horizontal"/>

   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TextView"
        android:id="@+id/TextView"
        android:textSize="30dp"
       android:layout_row="8"
       android:layout_column="0"
       android:layout_columnSpan="5"
       android:layout_gravity="fill_horizontal"/>
    </GridLayout>


</GridLayout>